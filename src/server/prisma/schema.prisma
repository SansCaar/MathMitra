generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = "mongodb+srv://root:root@cluster0.miub5gw.mongodb.net/mathsmitra"
}

model Student{
  id   String  @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String?
  password String
  role      String?
  classes     Json?
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @updatedAt
}

model Teacher{
  id   String  @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String?
  password String
  role      String?
  classes     Json?
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @updatedAt
}

model Classes{
  id   String  @id @default(auto()) @map("_id") @db.ObjectId
  name    String?
  subject    String?
  section    String?
  description String?
  studentsCount Int?
  assignmentsCount Int?
  createdAt   DateTime? @default(now()) 
  updatedAt   DateTime? @updatedAt
  teacherId String?
  studentId Json?
  classCode  Int?
}

model Assignment {
  id   String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  classCode     Int?
  teacherId String?
  dueDate String?
  submissionCount Int?
  questionId Json?

}

model Question{
  id   String  @id @default(auto()) @map("_id") @db.ObjectId
  question String?
  answer String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  assignmentId String?
  teacherId String?
  classCode     Int?
 submissionsCount Int?
 submittedId Json?
  
}
